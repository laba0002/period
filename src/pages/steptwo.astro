---
import Button from '../components/Button.astro';
import AbonnerLayout from "../layouts/AbonnerLayout.astro";
import { Image } from 'astro:assets';
import Mockup2 from "../assets/images/mockup_steptwo.webp";
import AbonnerSteps from "../components/AbonnerSteps.astro";
---

<AbonnerLayout title="Abonnér på Period.">
    <article class="px-sm flex flex-col max-w-lg md:max-w-2xl lg:max-w-6xl mx-auto">
        <AbonnerSteps href="/abonner"></AbonnerSteps>
        <form class="flex flex-col gap-6">
            <h4>Hvor ofte vil du modtage din levering?</h4>
            <section class="lg:flex flex-row">
                <Image class="" src={Mockup2} alt="Mockup"/>
                <div class="flex flex-col items-center justify-center gap-s mx-auto w-auto">
                  <label for="choice1" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="choisenr1" name="choise" class="peer hidden" />
                    <span>Prøvepakken</span>
                    <div class="absolute inset-0 top-xl md:top-[90px] rounded-border_radius-md border-[6px] border-transparent peer-checked:border-blue-500 peer-checked:bg-blue-500"></div>
                  </label>    
                  <label for="choice2" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="choisenr2" name="choise" class="peer hidden" />
                    <span>Hver måned</span>
                    <div class="absolute inset-0 top-xl md:top-[90px] rounded-border_radius-md border-[6px] border-transparent peer-checked:bg-blue-500"></div>
                  </label>
                  <label for="choice3" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="choisenr3" name="choise" class="peer hidden" />
                    <span>Hver anden måned</span>
                    <div class="absolute inset-0 top-xl md:top-[90px] rounded-border_radius-md border-[6px] border-transparent peer-checked:bg-blue-500"></div>
                  </label>
                  <label for="choice4" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="choisenr4" name="choise" class="peer hidden" />
                    <span>Hver tredje måned</span>
                    <div class="absolute inset-0 top-xl md:top-[90px] rounded-border_radius-md border-[6px] border-transparent peer-checked:bg-blue-500"></div>
                  </label>
                  <label for="choice5" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="choisenr5" name="choise" class="peer hidden" />
                    <span>Hvert halve år</span>
                    <div class="absolute inset-0 top-xl md:top-[90px] rounded-border_radius-md border-[6px] border-transparent peer-checked:bg-blue-500"></div>
                  </label>
                </div>
              </section>
        </form>
    </article>
    <Button variant="secondary" size="medium" href="/steptwo">
        <a href="/abonner">Tilbage</a>
    </Button>
    <Button variant="primary" size="large" href="/stepthree">
        Næste
    </Button>
</AbonnerLayout>