---
import Button from '../components/Button.astro';
import AbonnerLayout from "../layouts/AbonnerLayout.astro";
import Image from 'astro/components/Image.astro';
import begge from "../assets/images/begge.webp";
import bind from "../assets/images/bind.webp";
import tamponer from "../assets/images/tamponer.webp";
import AbonnerSteps from "../components/AbonnerSteps.astro";
---

<AbonnerLayout title="Abonnér på Period.">
    <article class="px-sm flex flex-col max-w-lg md:max-w-2xl lg:max-w-6xl mx-auto">
        <AbonnerSteps></AbonnerSteps>
        <h1 class="text-center">Tilpas dit eget abonnement</h1>
        
        <form class="flex flex-col gap-8">
            <section>
                <h4 class="text-center">Vælg det produkt, der passer bedst til dig!</h4>
                <div class="flex flex-row justify-center gap-8">
                    <!-- Begge Dele -->
                    <label for="product1" class="cursor-pointer flex flex-col items-center">
                        <input type="radio" id="product1" name="product" value="begge" class="hidden">
                        <Image src={begge} alt="Begge dele" class="w-24 h-24 object-cover hover:scale-110 transition">
                        <span class="text-lg font-medium text-red-600">Begge dele</span>
                    </label>
                    <!-- Bind -->
                    <label for="product2" class="cursor-pointer flex flex-col items-center">
                        <input type="radio" id="product2" name="product" value="bind" class="hidden">
                        <Image src={bind} alt="Bind" class="w-24 h-24 object-cover mb-2 hover:scale-110 transition">
                        <span class="text-lg font-medium text-red-600">Bind</span>
                    </label>
                    <!-- Tamponer -->
                    <label for="product3" class="cursor-pointer flex flex-col items-center">
                        <input type="radio" id="product3" name="product" value="tamponer" class="hidden">
                        <Image src={tamponer} alt="Tamponer" class="w-24 h-24 object-cover hover:scale-110 transition">
                        <span class="text-lg font-medium text-red-600">Tamponer</span>
                    </label>
                </div>
            </section>

            <!-- Flow Selection -->
            <section>
                <h4 class="text-center">Hvad passer til dit flow?</h4>
                <div class="flex flex-row justify-center gap-8">
                    <label for="flow1" class="flex flex-col items-center cursor-pointer">
                        <input type="radio" id="flow1" name="flow" value="light" class="hidden">
                        <div class="w-8 h-8 bg-red-300 rounded-full"></div>
                        <span class="text-lg">Let</span>
                    </label>
                    <label for="flow2" class="flex flex-col items-center cursor-pointer">
                        <input type="radio" id="flow2" name="flow" value="moderate" class="hidden">
                        <div class="w-12 h-12 bg-red-500 rounded-full"></div>
                        <span class="text-lg">Moderat</span>
                    </label>
                    <label for="flow3" class="flex flex-col items-center cursor-pointer">
                        <input type="radio" id="flow3" name="flow" value="heavy" class="hidden">
                        <div class="w-16 h-16 bg-red-700 rounded-full"></div>
                        <span class="text-lg">Kraftigt</span>
                    </label>
                </div>
            </section>

            <!-- Snack Preferences -->
            <section>
                <h4 class="text-center">Hvad er din snackpræference?</h4>
                <div class="flex flex-col md:flex-row items-center justify-center gap-s mx-auto w-auto">
                  <label for="snack1" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="snack1" name="snack" class="peer hidden" />
                    <span>Alle snacks</span>
                    <!-- Selected border stroke -->
                    <div class="absolute inset-0 rounded-border_radius-md border-[3px] peer-checked:border-sm peer-checked:border-blue-500 peer-checked:bg-blue-500"></div>
                  </label>
              
                  <!-- Veganer -->
                  <label for="snack2" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="snack2" name="snack" class="peer hidden" />
                    <span>Veganer</span>
                    <div class="absolute inset-0 rounded-border_radius-md border-[3px] border-transparent peer-checked:bg-blue-500"></div>
                  </label>
              
                  <!-- Glutenfri -->
                  <label for="snack3" class="relative flex items-center justify-center w-[294px] h-[76px] bg-red-700 rounded-border_radius-md cursor-pointer text-red-50 text-smallDesk font-regular hover:border-sm hover:border-blue-500 transition">
                    <input type="radio" id="snack3" name="snack" class="peer hidden" />
                    <span>Glutenfri</span>
                    <div class="absolute inset-0 rounded-border_radius-md border-[3px] border-transparent peer-checked:bg-blue-500"></div>
                  </label>
                </div>
              </section>
        </form>
        <div class="flex justify-end">
           <Button variant="primary" size="large" href="/steptwo">
                Næste
            </Button>
        </div>
    </article>
</AbonnerLayout>



