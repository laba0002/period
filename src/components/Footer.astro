---
import Wave from "./Wave.astro"
import { Image } from 'astro:assets';
import period from "../assets/images/Period.svg";
import tiktok from "../assets/images/tiktok-knap.svg";
import instagram from "../assets/images/instagram-knap.svg";
import facebook from "../assets/images/facebook-knap.svg";
import youtube from "../assets/images/youtube-knap.svg";
import betaling from "../assets/images/betaling.png";
---
<section>
<div class="overflow-clip w-auto"><Wave></Wave></div>

<div class="bg-red-50/60 pb-s">
    <Image class="w-full md:pr-8xl mx-auto px-ml mb-lg " src={period} alt="Logo"/>

    <div class="flex flex-row justify-between mx-auto px-ml">
        <div class="text-blue-950  "> 
            <p class="font-extrabold pb-xs">Information</p>
           <div class=" flex flex-col justify-around">
                <p class="hover:text-blue-600">FAQ</p>
                <p class="hover:text-blue-600">Om os</p>
                <p class="hover:text-blue-600">Kontakt</p>
                <p class="hover:text-blue-600">Vilkår og betingelser</p>
                <p class="hover:text-blue-600">Privatlivspolitik</p>
                <p class="hover:text-blue-600">Cookies</p>
           </div>
        </div>

        <div class="text-blue-950 text-right md:text-left"> 
            <p class="font-extrabold pb-xs">Udforsk Period</p>
       <div class="flex flex-col justify-around">
                <p class="hover:text-blue-600">Om pakken</p>
                <p class="hover:text-blue-600">Om os</p>
                <p class="hover:text-blue-600">Få dit abonnement</p>
                <p class="hover:text-blue-600">Min profil</p>
       </div>
        </div>

        <div class="text-blue-950 hidden md:block "> 
            <p class="font-extrabold pb-xs">Tilmeld nyhedsbrev</p>
            <input class="bg-red-300 w-[280px] p-xs rounded-border_radius-sm  border-none hover:bg-red-200 enabled:border-red-400 text-blue-950 placeholder:text-blue-950" type="email" placeholder="Din e-mail" required="" />
           
        </div>
    </div>

    <div class="flex flex-row justify-between mx-auto px-ml mt-ml">
        <Image class="w-auto hidden md:block " src={betaling} alt="betalingsmuligheder"/>
        <div class="flex flex-col content-center md:content-end">
            <div class="flex flex-row pb-xxs md:justify-end pl-s">
                <Image class="w-xl md:w-auto transition-all ease-in-out hover:scale-110" src={tiktok} alt="betalingsmuligheder"/>
                <Image class="w-xl md:w-auto transition-all ease-in-out hover:scale-110" src={instagram} alt="betalingsmuligheder"/>
                <Image class="w-xl md:w-auto transition-all ease-in-out hover:scale-110" src={facebook} alt="betalingsmuligheder"/>
                <Image class="w-xl md:w-auto transition-all ease-in-out hover:scale-110" src={youtube} alt="betalingsmuligheder"/>
            </div>
            <p class="text-konsultativMobile text-red-950 pl-ml">© Period. 2024, alle rettigheder CVR 123456789</p>

        </div>
    </div>

</div>

</section>